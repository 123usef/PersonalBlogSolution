@model List<Category> ;


@if (Model.Count()>0)
{
    <table class="table table-hover ">
            <thead>
                <th>
                    <td>
                        Category Name
                    </td>
                    <td>Category Description</td>
                </th>
            </thead>
        <tbody>
    @foreach (var item in Model)
    {
            
            
            <tr>
                 <td>@item.Name</td>  
                 <td>@item.Description</td>
            </tr>
    }
        </tbody>

    </table>

}
else
{
    <div class="container">
        <h3 class="alert alert-primary">No Category yet  </h3>
    </div>

}
